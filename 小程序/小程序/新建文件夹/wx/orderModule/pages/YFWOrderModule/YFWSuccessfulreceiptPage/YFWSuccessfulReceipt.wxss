page {
  background-color: #f5f5f5;
}

.top_image_bg {
  width: 100%;
  height: 440rpx;
  display: flex;
  flex-direction: column;
  background-color: #49ddb8;
}

.topTips {
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  background-color: rgb(254, 249, 202);
  color: #feac4c;
}

.topTipsText {
  margin-left: 30rpx;
  width: 690rpx;
}

.pay_status {
  align-items: center;
  /* justify-content: center; */
  display: flex;
  flex-direction: column;
}

.pay_info_content {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: center */
}

.pay_info_icon {
  width: 28rpx;
  height: 28rpx;
}

.pay_info_text {
  color: white;
  font-size: 26rpx;
  margin-left: 16rpx;
}

.order_status {
  margin-top: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.order_status .icon {
  width: 60rpx;
  height: 60rpx;
}

.order_status .text {
  font-size: 36rpx;
  color: #fff;
  margin-left: 18rpx;
}

.top_buttons {
  display: flex;
  flex-direction: row;
  margin-top: 120rpx;
  width: 700rpx;
  margin-left: 25rpx;
}

.left_button {
  width: 270rpx;
  height: 69rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #1fdb9b;
  border-radius: 34rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  background-color: #fff;
  box-shadow: 0rpx 7rpx 15rpx 0rpx rgba(31, 184, 132, 0.5);
}

.center_ads {
  position: relative;
  width: 700rpx;
  margin-left: 25rpx;
  height: 193rpx;
  border-radius: 14rpx;
  top: -48rpx;
  box-shadow: 0rpx 7rpx 15rpx 0rpx rgba(204, 204, 204, 0.5);
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.center_ads .ads_item {
  display: flex;
  flex-direction: row;
  flex: 1;
  align-items: center;
  position: relative;
}

.share-button {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
  background: transparent;
  color: transparent;
}

.center_ads .ads_item .image_parent {
  width: 240rpx;
  height: 70rpx;
}

.center_ads .ads_item .image_parent .image {
  width: 190rpx;
  height: 70rpx;
  margin-left: 30rpx;
}

.center_ads .ads_item .text {
  font-size: 24rpx;
  color: #999;
}

.center_ads .ads_item .next {
  width: 12rpx;
  height: 22rpx;
  margin-right: 30rpx;
}

.bottom_ads {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 25rpx;
  background-color: #f5f5f5;
}

.ad_tips_text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  z-index: 999;
}

.ad_tips_text_bottom {
  background-image: linear-gradient(270deg, #4bfdf2 0%, #4bff8f 100%), linear-gradient(#fff, #fff);
  background-blend-mode: normal, normal;
  width: 112rpx;
  height: 12rpx;
  margin-top: -8rpx;
  box-shadow: 0rpx 7rpx 15rpx 0rpx rgba(131, 241, 219, 0.59);
}

.collectionItemView {
  display: inline-block;
  vertical-align: top;
  flex-direction: column;
  width: 50%;
  margin: 7rpx 0;
  border-radius: 20rpx;
  justify-content: center;
}

.collectionItemView:nth-of-type(odd) {
  margin-left: -14rpx;
  margin-right: 14rpx;
}

.collectionView {
  background-color: #f5f5f5;
  padding: 7rpx 14rpx 7rpx 28rpx;
}
