/* pages/YFWOrderModule/YFWUploadPrescriptionInfoPage/YFWUploadPrescriptionInfo.wxss */
page{
  background-color: #fafafa;
}
.top_tip {
  padding: 14rpx 26rpx;
  background-color: #faf8dc;
  color: #feac4c;
  font-size: 24rpx;
}
.container {
  box-shadow: 0rpx 0rpx 6rpx rgba(214, 211, 211, 0.3);
  margin: 20rpx 26rpx;
  border-radius: 10rpx;
  background-color: white;
}
.content {
  height: 88rpx;
  display: flex;
  flex-direction: row;
  padding: 0rpx 26rpx;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}
.shop_name {
  margin-left: 15rpx;
}
.gray {
  color: #999;
  margin-left:15rpx;
}
.line {
  background-color: #f5f5f5;
  height: 1px;
  width: 100%;
}
.drug_container {
  background-color: #fafafa;
  padding: 20rpx 26rpx;
}
.drug_content {
  margin: 30rpx 0rpx;
  color: #000;
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.drug_content_right {
  color: #999;
}
.upload_title {
  color: #333;
  padding-top: 30rpx;
  padding-left: 36rpx;
  padding-bottom: 20rpx;
  font-weight: bold;
  font-size: 30rpx;
}
.upload_image {
  width: 200rpx;
  height: 200rpx;
  margin-left: 15rpx;
  padding-bottom: 30rpx;
  position: relative;
}
.upload_delect {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  top: -10rpx;
  right: -21rpx;
  padding: 15rpx;
}
.address-add {
	width: 100%;
  color: white;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;


}
.btnBtom{
	position: fixed;
  width: 90%;
  margin-left: 5%;
  height: 80rpx;
  border-radius: 50rpx;
  background: linear-gradient(to right,#00c891,#1fdb9b);
  box-shadow: 0rpx 8rpx 30rpx rgba(31, 219, 155, 0.5);
  bottom: 50rpx;
  align-items: center;
  display: flex;
}