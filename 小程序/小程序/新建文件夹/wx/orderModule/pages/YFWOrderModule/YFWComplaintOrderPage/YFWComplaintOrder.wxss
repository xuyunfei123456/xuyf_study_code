.topLayout {
  width: 750rpx;
  height: 200rpx;
  background-color: #49ddb8;
  position: absolute;
  top: 0px;
}
.wrapper {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 14rpx;
  box-shadow: 0rpx 7rpx 15rpx 0rpx rgba(204, 204, 204, 0.6);
  position: relative;
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 20px;
  padding-left: 22px;
  padding-right: 12px;
}
.titleview{
  display: flex;
  margin-top: 24px;
}
.list{
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 17px;
  padding-bottom: 19px;
  border-bottom: 1px solid #cccccc;
  border-color: rgba(240,240,240,0.1);
}
.name{
  font-size: 14px;
  color: #333333;
  font-weight: normal;
}
.tip{
  color: #999999;
  font-size: 12px;
  margin-top: 9px;
}
.listwrapper{
  margin-top: 13px;
}
.nobottom{
  border: none;
  padding-bottom: 47px;
  margin-top: 28px;
  
}
.arrow{
  height: 13px;
  width: 8px;
  margin-top: 11px;
}
.top30{
  top: 30px;
}
.reasonTitle {
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.reasonTitleText {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  z-index: 99;
}

.reasonBottom {
  background-image: linear-gradient(270deg, #4bfdf2 0%, #4bff8f 100%), linear-gradient(#fff, #fff);
  background-blend-mode: normal, normal;
  width: 125rpx;
  height: 12rpx;
  margin-top: -8rpx;
  box-shadow: 0rpx 7rpx 15rpx 0rpx rgba(131, 241, 219, 0.59);
}