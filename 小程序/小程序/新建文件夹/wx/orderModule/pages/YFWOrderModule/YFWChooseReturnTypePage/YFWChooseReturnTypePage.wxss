page {
  background-color: #fafafa
}
.top_bg {
  width: 750rpx;
  height: 285rpx;
  background-color: #49ddb8;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top_bg .tips {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
  margin-top: 60rpx;
}

.returnTypeLayout {
  width: 700rpx;
  height: auto;
  margin-left: 25rpx;
  position: relative;
  background-color: #fff;
  border-radius: 14rpx;
  box-shadow: 0rpx 7rpx 15rpx 0rpx rgba(204, 204, 204, 0.6);
  margin-top: -135rpx;
  display: flex;
  flex-direction: column;
}

.typeItemTop {
  width: 620rpx;
  margin-left: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 40rpx;
  padding-top: 80rpx;
  padding-bottom: 40rpx;
}

.typeItemBottom {
  width: 620rpx;
  margin-left: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 40rpx;
  padding-top: 40rpx;
  padding-bottom: 80rpx;
}

.typeTextChoosed {
  font-size: 28rpx;
  color: #333;
}

.typeTextUnChoosed {
  font-size: 28rpx;
  color: #999;
}

.choosedIcon {
  width: 40rpx;
  height: 40rpx;
}

.splite {
  width: 620rpx;
  height: 2rpx;
  margin-left: 40rpx;
  background-color: #e5e5e5;
}

.next {
  width: 700rpx;
  height: 84rpx;
  background-image: linear-gradient(270deg, #00c891 0%, #1fdb9b 100%), linear-gradient(#fff, #fff);
  background-blend-mode: normal, normal;
  box-shadow: 0rpx 7rpx 15rpx 0rpx rgba(31, 219, 155, 0.5);
  border-radius: 42rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  position: fixed;
  left: 25rpx;
  bottom: 100rpx;
}

.text {
  font-size: 34rpx;
  color: #fff;
}

.return {
  width: 700rpx;
  height: 84rpx;
  background-image: linear-gradient(270deg, #00c891 0%, #1fdb9b 100%), linear-gradient(#fff, #fff);
  background-blend-mode: normal, normal;
  box-shadow: 0rpx 7rpx 15rpx 0rpx rgba(31, 219, 155, 0.5);
  border-radius: 42rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  position: fixed;
  left: 25rpx;
  bottom: 210rpx;
}
.container{
  width: 100vw;
  height: 100%;
  background-color: #fafafa
}
.scroll {
  flex: 1
}
.top_view {
  margin-top: 28rpx;
  margin-left: 24rpx;
  display: flex;
}
.operationContainer {
  background-color: #fff;
  box-shadow: 0rpx 0rpx 4rpx rgba(204, 204, 204, 0.2);
  border-radius: 16rpx;
  margin-left: 26rpx;
  margin-right: 26rpx;
  margin-top: 6rpx;
  padding: 8rpx;
}
.operation {
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.icon_view {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.operationText {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  text-align: left;
  flex: 1
}
.arrow{
  width: 21rpx;
  height: 36rpx;
  margin-right: 24rpx;
}