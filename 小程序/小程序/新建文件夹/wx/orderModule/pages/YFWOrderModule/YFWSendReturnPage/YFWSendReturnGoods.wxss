page {
  background-color: #f5f5f5;
}

.topWarning {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fdf8c5;
}

.warningText {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #ff6e40;
}

.logisticsCompany {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}

.logisticsCompany .tips {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #333;
  margin-right: 20rpx;
}

.logisticsCompanyInput {
  flex: 1;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

.logisticsCompanyInputHolder {
  color: #999;
  font-size: 28rpx;
}

.logisticsNumber {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  margin-top: 20rpx;
}

.logisticsNumberInputHolder {
  color: #999;
  font-size: 28rpx;
}

.logisticsNumberInput{
  flex: 1;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}

.postButton {
  width: 700rpx;
  height: 84rpx;
  background-image: linear-gradient(270deg, #00c891 0%, #1fdb9b 100%), linear-gradient(#fff, #fff);
  background-blend-mode: normal, normal;
  box-shadow: 0rpx 7rpx 15rpx 0rpx rgba(31, 219, 155, 0.5);
  border-radius: 42rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-left: 25rpx;
}

.postButton .text {
  font-size: 34rpx;
  color: #fff;
}
