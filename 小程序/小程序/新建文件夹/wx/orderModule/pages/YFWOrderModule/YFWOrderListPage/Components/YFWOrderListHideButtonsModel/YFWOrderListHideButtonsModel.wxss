.hide_buttons_outside {
  display: flex;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 999;
}

.hide_buttons_parent {
  width: 170rpx;
  height: auto;
  position: fixed;
  flex-direction: column;
}

.top_triangle {
  width: 0;
  height: 0;
  margin-left: 40rpx;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 17rpx solid rgba(0, 0, 0, 0.5);
}

.buttons{
  width: 170rpx;
  height: auto;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}

.bottom_triangle{
  width: 0;
  height: 0;
  margin-left: 40rpx;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 17rpx solid rgba(0, 0, 0, 0.5);
}

.buttons_item{
  font-size: 26rpx;
  color:#FFF;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  height: 45rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.splite{
  width: 150rpx;
  height: 1rpx;
  background-color: #FFF;
  margin-left: 10rpx;
}

