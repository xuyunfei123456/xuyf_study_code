page {
    background-color: #fafafa;
}

.scroll {
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
    background: #ffffff;
}

.bottom_container {
    background-color: #f8f8f8;
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    height: 60px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: row;
}

.send {
    background-color: #dddddd;
    color: white;
    height: 39px;
    line-height: 39px;
    text-align: center;
    width: 128rpx;
    margin-right: 26rpx;
    border-radius: 6rpx;
}

.wrapper {
    padding: 0 20px;
}

.selfAndTime {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
}

.self {
    font-size: 30rpx;
    color: #16c08e;
    font-weight: bold;
}

.time {
    color: #999999;
    font-size: 22rpx;
}

.message {
    color: 3666666;
    font-size: 14px;
    padding-top: 8px;
    word-break: break-all;
}

.list {
    margin-top: 13px;
    padding-bottom: 12px;
    border-bottom: 1px solid #ededed;
}

.input {
    height: 39px;
    padding-left: 10px;
    background-color: white;
    margin: 0px 13px;
    flex: 1;

}

.placeTip {
    color: #666666;
    font-size: 12px;
}
.hascontent{
    background-color: #1fdb9b;
}