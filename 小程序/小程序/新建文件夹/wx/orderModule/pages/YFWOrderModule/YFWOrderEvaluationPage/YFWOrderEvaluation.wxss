page{
  background-color: #F5F5F5
}

.parent_css {
  width: 700rpx;
  margin-left: 25rpx;
  margin-top: 34rpx;
  border-radius: 14rpx;
  box-shadow: 0rpx 6rpx 20rpx 4rpx rgba(204, 204, 204, 0.6);
  height: auto;
  display: flex;
  flex-direction: column;
  background-color: #fff
}

.medicine_info {
  display: flex;
  flex-direction: row;
  margin-left: 28rpx;
  margin-right: 28rpx;
  margin-top: 28rpx;
  align-items: center;
}

.medicine_info .medicine_image {
  width: 148rpx;
  height: 148rpx;
  min-width: 148rpx;
}

.medicine_info .info {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.medicine_info .info .order_no {
  color: #333;
}

.medicine_info .info .price {
  font-size: 28rpx;
  color: #f30;
  margin-top: 10rpx;
}

.dash_line {
  width: 644rpx;
  margin-left: 28rpx;
  height: 1rpx;
  background-image: linear-gradient(to right, #ccc 0%, #ccc 50%, transparent 50%);
  background-size: 8rpx 4px;
  background-repeat: repeat-x;
}

.evaluation_item {
  margin-top: 40rpx;
  margin-left: 58rpx;
  margin-right: 58rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.evaluation_item .type_text {
  font-size: 24rpx;
  color: '#333333';
}

.input_parent {
  width: 644rpx;
  height: 220rpx;
  border: #ccc solid 2rpx;
  margin-top: 30rpx;
  margin-left: 28rpx;
}

.input_parent .input_placeholde {
  font-size: 22rpx;
  color: #ccc;
}

.input_parent .input_edite {
  font-size: 22rpx;
  color: #333;
  width: 612rpx;
  margin-left: 16rpx;
  margin-top: 14rpx;
}

.tips_text {
  font-size: 20rpx;
  color: #ccc;
  margin-left: 40rpx;
  margin-top: 14rpx;
  margin-bottom: 28rpx;
}

.post_button {
  margin-top: 185rpx;
  width: 700rpx;
  height: 84rpx;
  background-image: linear-gradient(270deg, #00c891 0%, #1fdb9b 100%), linear-gradient(#fff, #fff);
  background-blend-mode: normal, normal;
  box-shadow: 0rpx 7rpx 15rpx 0rpx rgba(31, 219, 155, 0.5);
  border-radius: 42rpx;
  margin-left: 25rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center
}

.post_button .text{
  font-size: 34rpx;
  color: #FFFFFF
}
