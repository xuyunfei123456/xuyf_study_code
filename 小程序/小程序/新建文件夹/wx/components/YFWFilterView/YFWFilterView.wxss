  height:0rpx;
  z-index: 99999;
  width: 100%;
  padding-top: 12px;
}
.icon_arrow_down{
  width: 22rpx;
  height: 13rpx;
  vertical-align: center;    

}
.fz{
  transform: rotate(180deg);
}
.fontcolor{
  color: #33DB9B;
  border-radius: 15px 15px 0px 0px;
}
.searchIcon{
  width: 38rpx;
  height: 30rpx;

}
