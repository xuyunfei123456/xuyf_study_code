}
.item-text {
  font-size: 26rpx;
  color: #333333;
}
.my-box-context {
  flex-direction: row;
  align-items: center;
  display: flex;
  margin-top: 26rpx;
}
.box-context-one {
  font-size: 22rpx;
  color: #1fdb9b;
}
.box-context-two {
  font-size: 22rpx;
  color: #999999;
}
.box-context-thress {
  margin-left: 44rpx;
  font-size: 22rpx;
  color: #999999;
}
