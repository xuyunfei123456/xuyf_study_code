.container{
  width: 100%;
  height: 100%;
  flex-direction: column;
  display: flex;
  
}
.mybox {

  flex-direction: column;
  width: 100%;
  margin-top: 24rpx;
  
}
.title-view {
  margin-bottom: 40rpx;
  margin-left: 46rpx;
  margin-right: 46rpx;
  position: relative;
}
.title-view text {
  font-size: 30rpx;
  color: #333333;
  margin-left: 0rpx;
  
}
.title_icon {
  height: 50rpx;
  width: 50rpx; 
}
.title_icon1 {
  height: 50rpx;
  width: 50rpx;
  top:15rpx;
  left: -8rpx;
  position: absolute
}
.doctor-ask {
  margin-bottom: 40rpx;
  flex-direction: column
}
.doctor-view {
  flex-direction: row;
  align-items: center;
  margin-right: 46rpx;
  }
.doctor-item {
  flex-direction: row;
  align-items: center;
  display: flex;
  
}
.doctor-item image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 46rpx;
  border-radius: 30rpx;
  display: flex;
}
.doctor-text {
  font-size: 24rpx;
  color: #999999;
  margin-left: 20rpx;
  display: flex;
}
.doctor-item-view {
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 6rpx;
  background-color: #f5f5f5;
  margin-left: 20rpx;
  display: flex;
}
.doctor-item-view text {
  font-size: 22rpx;
  color: #dab96b;
}
.shop-name {
  margin-left: 6rpx;
  overflow: hidden; 
  text-overflow: ellipsis;
  white-space: nowrap; 
  font-size: 22rpx;
  color: #999999;
  flex: 1;
}
.shop-name text {
  
}
.reply_content{
  margin-left: 46rpx;
  margin-right: 58rpx;
  font-size: 24rpx;
  color: #333333;
  margin-top: 20rpx;
  display: -webkit-box;     
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;           
  -webkit-box-orient: vertical;   
  -webkit-line-clamp: 2;    
}
.bottom-view {
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  display: flex;
}
.bottom-left-view {
  margin-left: 46rpx;
  font-size: 22rpx;
  color: #999999;
}
.bottom-right-view {
  margin-right: 46rpx;
  flex-direction: row;
  align-items: center;
  display: flex;
}
.bottom-right-status {
  flex-direction: row;
  align-items: center;
  display: flex
}
.bottom-right-status image{
  width: 30rpx;
  height: 30rpx;
}
.bottom-right-status text {
  font-size: 22rpx;
  margin-left: 8rpx;
  color: black;
}
.reply_count {
  margin-left: 44rpx;
  flex-direction: row;
  align-items: center;
  display: flex;
}
.reply_count image {
  width: 12rpx;
  height: 20rpx;
  margin-left: 6rpx;
}
.reply-count-text {
  font-size: 26rpx;
  color: #1fdb9b; 
}
.reply-count-txt {
  font-size: 26rpx;
  color: #999999; 
}
.bottom-line {
  margin-top: 28rpx;
  margin-left: 46rpx;
  margin-right: 46rpx;
  height: 2rpx;
  background-color: #f5f5f5
}
.my-box {
  width: 100%;
  background-color: #ffffff;
  padding: 40rpx 46rpx 0rpx 46rpx;
