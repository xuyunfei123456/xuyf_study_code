/* components/YFWSpecificationModal/YFWSpecificationModal.wxss */
.model-specification {
    padding: 0 37.333rpx;
}

.model-specification-main {
    padding-bottom: 120rpx;
}

.model-specification-footer {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 10rpx 37.333rpx 10rpx;
    background-color: #fff;
}

.model-specification-title {
    font-size: 28rpx;
    line-height: 38.4rpx;
    color: #333333;
    margin-bottom: 16rpx;
    text-indent: -12rpx;
}

.model-specification-article {
}

.model-specification-article:not(:first-child) {
    margin-top: 40rpx;
}

.model-specification-text {
    font-size: 26rpx;
    line-height: 33.333rpx;
    color: #666666;
    white-space: pre-line;
}

.model-specification-confirm {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background-image: linear-gradient(270deg,
        #44c4b0 0%,
        #1fdb9b 100%),
    linear-gradient(#00b187,
        #00b187);
    background-blend-mode: normal,
    normal;
    box-shadow: 0rpx 7rpx 15rpx 0rpx rgba(39, 214, 160, 0.5);
    border-radius: 40rpx;
    font-size: 32rpx;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0rpx;
    color: #ffffff;
}