
@keyframes onloading-view {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.onloading {
  margin-left: -14rpx;
  border-top: 3rpx solid #f3f3f3;
  text-align: center;
  font-size: 0;
  padding: 20rpx 0;
  background-color: #ffffff;
}
.onloading .load-wrap .loading-icon {
  animation: onloading-view linear 1.6s 0s infinite;
  -webkit-animation: onloading-view linear 1.6s 0s infinite;
  display: inline-block;
  height: 23px;
  width: 23px;
  position: relative;
  border-radius: 50%;
  border: 5rpx solid #0BA756;
}
.onloading .load-wrap .loading-icon .hide-block {
  display: inline-block;
  position: absolute;
  width: 20px;
  height: 20px;
  top: 0;
  left: 40%;
  background-color: #ffffff;
}
.onloading .load-wrap .loadover {
  font-size: 24rpx;
  color: #999999;
}
