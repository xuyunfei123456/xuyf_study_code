/* myCenter/pages/YFWUserCenterModule/YFWInvitationPage/YFWInvitation.wxss */
page{
  margin: 0px;
  padding: 0px;
}
.invitation_page1_top{
  width: 100%;
  height: 444rpx;
}
.invitation_page1_middle{
  width: 100%;
  height: 805rpx;
  position: relative;
}
.invitation_page1_bottom{
  width: 100%;
  height: 168rpx;
}
image{
  height: 100%;
  width: 100%;
}
.ava{
  position: absolute;
  height: 120rpx;
  width: 120rpx;
  left: 50%;
  top: 100rpx;
  transform: translateX(-50%);
  border-radius: 50%;
}
.invitation_name{
  position: absolute;
  width: 100%;
  text-align: center;
  color: white;
  font-size:40rpx;
  top: 280rpx;
}
.invitation_button{
  position: absolute;
  top: 450rpx;
  width: 406rpx;
  height: 86rpx;
  text-align: center;
  color: #d39349;
  background-size: 100% 100%;
  line-height: 94rpx;
  left: 50%;
  transform: translateX(-50%);
  font-weight: bolder;
  background: none;
  border-radius: 50rpx;
}
.loadingbg{
  width: 100%;
  height: 100%;
  background: transparent;
  position: absolute;
  top: 0px;
}
.invitation-loading{
  position: absolute;
  display: flex;
  flex-direction: row;
  top:42vh;
  left: calc(50vw - 35rpx);
  width: 70rpx; 
	height: 70rpx;
  z-index: 999;
	background-color: transparent;
}
.invitation_text{
  position: absolute;
  left: 50%;
  transform: translate(-50%);
}
.invita_text{
  position: absolute;
  color: white;
  text-align: center;
  font-size: 28rpx;
  top: 350rpx;
  width: 100%;
}