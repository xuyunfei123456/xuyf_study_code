page {
  background-color: #faf9f9;
}

.containers {
  width: 100%;
  height: 100%;
}

.contact-us {
  height: 210rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.img-information {
  width: 130rpx;
  height: 130rpx;
  margin-left: 30rpx;
}

.online-service {
  font-size: 30rpx;
  margin-left: 40rpx;
  color: #000;
}

.img-navigate {
  float: right;
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 0;
  margin-right: 20rpx;
}

.divLine {
  background: #ddd;
  width: 100%;
  height: 1rpx;
}

.view-bottom {
  width: 100%;
  position: absolute;
  bottom: 0;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  margin-left: 24%;
}
.view-phone{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.phone {
  width: 40rpx;
  height: 40rpx;
}

.tv-phone {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #666;
  text-align: center;
}
.view-email{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 13rpx;
}
.email {
  width: 40rpx;
  height: 40rpx;
}

.tv-email {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #666;
}
