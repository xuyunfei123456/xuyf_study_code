  height: 50rpx;
  width: 100%
}
.bottom_container {
  background-color: #fafafa;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
}

.modal {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.modal-back {
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.4);
}

.modal .modal-content {
  position: absolute;
  bottom: 0; 
  display: flex;
  flex-direction: column;
  height: 50%;
  width: 100%;
  background-color: #fff;
  overflow: hidden;
  max-height: 1000rpx;
  z-index: 800;
  padding-bottom: env(safe-area-inset-bottom);
}
.scrollView{
  display:flex;
  width:100%;
  height: 80%;

  -webkit-overflow-scrolling: touch;
}