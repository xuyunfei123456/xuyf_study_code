.container{
  display: flex;
  flex-direction: column;
  width: 100vw;
  min-height: 100vh;
  background-color: #fafafa;
  padding-bottom: 40rpx;
}
.itemView{
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0px 0px 30rpx #cecece47;
  margin: 34rpx 5vw 0 5vw;
  background-color: white;
  padding-bottom: 40rpx;
}
.titleview{
  display: flex;
  background-color: white;
  padding-top: 28rpx;
  padding-left: 40rpx;
}
.item{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 200rpx;
  align-items: center;
  background-color: white;
}
.listItemView{
  display: flex;
  flex-direction: row;
  min-height: 200rpx;
  align-items: center;
  background-color: white;
}
.bottonView{
  display: flex;
  min-height: 200rpx;
  align-items: center;
  justify-content: center;
}
.shopItemView{
  min-height: 150rpx;
}
.bottonItem{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin: 0 20rpx;
}
.unselect{
  width: 40rpx;
  height: 40rpx;
  margin: 0 27rpx 0 25rpx;
}
.goods_image{
  height: 160rpx;
  width: 160rpx;
  margin: 0 20rpx 0 20rpx;
}
.shop_image{
  height: 70rpx;
  width: 140rpx;
  margin: 0 20rpx 0 20rpx;
}
.rightView{
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  min-height: 198rpx;
  background-color: white;
  border-bottom: 2rpx solid #fafafa;
}
.shopRight{
    min-height: 148rpx;
}
.goods_name{
 /* 显示两行： */
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
/* 多出部分显示省略号... */
  overflow: hidden;
  text-overflow: ellipsis;
  width: 450rpx;
  color: #333333;
  font-size: 30rpx;
}
.goods_shop_name{
   /* 显示两行： */
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
/* 多出部分显示省略号... */
  overflow: hidden;
  text-overflow: ellipsis;
  width: 450rpx;
  color: #999999;
  font-size: 24rpx;
  margin-top: 14rpx;
}
.goods_price{
  display: inline-flex;
  width: 450rpx;
  margin-top: 20rpx;
}
.clearAll{
  display:flex;
  position:fixed;
  font-size:24rpx;
  color:#666666;
  top:50rpx;
  right:50rpx;
  background-color:rgba(1, 1, 1, 0.1);
  width:100rpx;
  height:100rpx;
  border-radius:100rpx;
  justify-content:center;
  align-items:center;
}
.emptyView{
  display:flex;
  position:fixed;
  flex-direction: column;
  font-size:24rpx;
  top:25vh;
  left:0rpx;
  width:100vw;
  height:600rpx;
  align-items:center;
}
.emptyImage{
  width: 300rpx;
  height: 300rpx;
}
.emptyTitle{
  display: flex;
  margin-top: 20rpx;
  font-size: 20rpx;
  color: #666666;
}
.emptyBottom{
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  margin-top: 20rpx;
  width: 160rpx;
  height: 60rpx;
  background-color: #49ddb8;
  border-radius: 5rpx;
}


.sidebar-bottom{
  display:flex;
  height:167rpx;
  flex-direction:row;
  align-items:center;
  justify-content: center;
}
.sidebar-bottom .delete{
  height:100%;
  width:50%;
  position: relative;
	font-size: 29rpx;
  font-weight: normal;
  background:#ff3301;
  text-align:center;
  color:#ffffff;
}
.sidebar-bottom .delete:before{
  content: '删除';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}