.item {
  border-radius: 15rpx;
  background-color: #fff;
  box-shadow: 0rpx 2rpx 2rpx 2rpx rgba(0, 0, 0, 0.15);
  margin: 60rpx 26rpx 0rpx 26rpx;
}

.notice {
  margin: 42rpx 64rpx 0rpx 36rpx;
}

.noticeTitle {
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}

.list {
  margin-top: 34rpx;
}

.listItem {
  color: #666666;
  font-size: 30rpx;
  line-height: 64rpx;
}

.under {
  width: 110%;
  height: 16rpx;
  margin-top: -9rpx;
  background: linear-gradient(to right, #4bfdf2, #4bff8f);
  margin-left: -5%;
}

.explain_txt {
  width: auto;
  color: "#333333";
  font-size: 32rpx;
  font-weight: 600;
  display: inline-block;
  padding-left: 52rpx;
  padding-top: 54rpx;
  padding-bottom: 60rpx;
}

.textarea {
  margin-left: 42rpx;
  margin-right: 48rpx;
  padding-bottom: 50rpx;
}

.bottom {
  width: 90%;
  margin-left: 5%;
  margin-top: 154rpx;
}

.applycancel {
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  border-radius: 50rpx;
  background: linear-gradient(to right, #00c891, #1fdb9b);
  box-shadow: 0rpx 8rpx 30rpx rgba(31, 219, 155, 0.5);
  font-size: 34rpx;
  color: #ffffff;
  font-weight: bold;
}

.contact {
  text-align: center;
  color: #666666;
  font-size: 30rpx;
  padding-bottom: 46rpx;
  padding-top: 32rpx;
}

button {
  background: none;
}

.shadow {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
}

.tipWrapper {
  width: 638rpx;
  height: 448rpx;
  background-color: #ffffff;
  border-radius: 14rpx;
  z-index: 9999999;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.tippic {
  width: 94rpx;
  height: 94rpx;
  margin-top: 37px;
  margin-bottom: 52rpx;

}

.tipText {
  color: #999999;
  font-size: 30rpx;
  padding: 0rpx 47px;
  text-align: center;

}

.tipBtn {
  color: #1fdb9b;
  border: 1px solid #1fdb9b;
  width: 242rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  margin-top: 60rpx;
  border-radius: 30rpx;

}