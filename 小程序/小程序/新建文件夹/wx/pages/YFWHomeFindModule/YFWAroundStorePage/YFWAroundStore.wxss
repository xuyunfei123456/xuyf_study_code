/* pages/YFWHomeFindModule/YFWAroundStorePage/YFWAroundStore.wxss */
.container{
  width: 100vw;
  height: 100vh;
  background-color: white
}
.topView {
  position: fixed;
  height: 100rpx;
  background-color: #49ddb8;
  width: 100vw;
  z-index: 99;
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.topView image {
  height: 36rpx;
  width: 36rpx;
  margin-right: 38rpx;
  display: flex;
}
.around-context {
  width: 100%;
  height: 100vh;
  transform-style:preserve-3d;
  display: flex;

}
.frame {
  width: 100%;
  height: 100vh;
  position: absolute;
}
.front{
  animation:front 1s linear 1;
}
.back{
  animation:back 1s linear 1;
  backface-visibility: hidden;
}

@keyframes front{from{transform: rotateY(0deg);}  to{transform: rotateY(180deg);}}
@keyframes back{from{transform: rotateY(-180deg);}  to{transform: rotateY(0deg);}}


.z1{
  z-index:10
}
.z2{
  z-index: 5
}
.list_view {
  top: 0rpx;
  flex: 1;
  display: flex;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  background-color: #ffffff;
  -webkit-overflow-scrolling: touch;

}
.find_near_contextView {
  flex: 1;
  flex-direction: row;
  align-items: center;
  display: flex;
  background-color: white;
  box-shadow: 0rpx 8rpx 8rpx 0rpx rgba(204, 204, 204, 0.2);
  border-radius: 14rpx;
  position: relative;
  margin-bottom: 16rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.find_near_icon {
  margin: 22rpx 0rpx 22rpx 22rpx;
  width: 160rpx;
  height: 126rpx 
}
.find_near_context {
  flex-direction: column;
  margin-left: 10rpx;
  padding-top: 28rpx;
  padding-bottom: 16rpx;
  display: flex;
  flex: 1;
}
.find_shop_title {
  color: #333333;
  font-size: 30rpx;
  margin-left: 10rpx;
  overflow: hidden; 
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 470rpx;

}
.find_shop_status {
  margin-top: 50rpx;
  margin-left: 10rpx;
  flex-direction: row;
  align-items: center;
  display: flex;
}
.logistics_status_icon {
  width: 26rpx;
  height: 26rpx;
}
.logistics_status_text {
  font-size: 26rpx;
  color: #19A82D;
  display: flex;
  min-width: 100rpx;
}
.evaluation_icon {
  width: 36rpx;
  height: 36rpx;
}
.evaluation_text {
  font-size: 26rpx;
  color: #999999;
  display: flex;
  min-width: 34rpx;
}
.kind{
  flex: 1;
}
.find_shop_loaction {
  color: #999999;
  font-size: 26rpx;
  margin-right: 30rpx;
  display: flex;
}
.map-tab{
  display:flex;
  position:fixed;
  font-size:24rpx;
  color:#666666;
  top:50rpx;
  right:50rpx;
  background-color:rgba(1, 1, 1, 0.1);
  width:100rpx;
  height:100rpx;
  border-radius:100rpx;
  justify-content:center;
  align-items:center;

}

.map-tab image {
  width: 40rpx;
  height: 40rpx;
}