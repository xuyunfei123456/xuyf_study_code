/* pages/YFWHomeFindModule/YFWCategoryPage/YFWCategory.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: white;
}
.headerview {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.navgationview {
  position: fixed;
  height: 0rpx;
  background-color: #49ddb8;
  width: 100%;
  z-index: 100;
}
.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 0rpx
}
.box {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
}
.left-list-view {
  width: 26%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 42rpx;
}
.left,.right {
  width: 100%;
  flex: 1;
  height: 100rpx;
}
.left-list {
  height: 100%;
  -webkit-overflow-scrolling: touch;
}
.right-list {
  height: 100%;
  -webkit-overflow-scrolling: touch;
}
.right-list-view {
  height: 100%;
  width: 74%;
  display: flex;
  flex-direction: column
}
.left-context {
  width: 100%;
  height: 112rpx;
}
.leftline-select{
  width: 12rpx;
  height: 100%;
  background-color: transparent;
  
}
.leftline {
  background-color: rgb(31,219,155);
}
.left-context view{
  align-items: center;
  display: flex;
  height: 100%;
  flex-direction: row;
}
.left-text {
  width: 100%;
  font-size: 28rpx;
  color: rgb(153,153,153);
  text-align: center;

}
.left-text-select {
  color: rgb(51,51,51)
}
.context{
  width: 100%;
  display: flex;
}
.context image{
  margin: 34rpx 38rpx 32rpx 18rpx;
  height: 126rpx;
}
.class-type{
  width: 100%;
  display: flex;
  margin-top: 0rpx;
  flex-direction: column;
}
.class-type-context {
  width: 100%;
  height: 128rpx;
  flex-direction: row;
  align-items: center;
  display: flex;
  justify-content: space-between
}
.class-context-text{
  
  margin-left: 32rpx;
}
.more-text {
  font-size: 26rpx;
  color: #666666;
  margin-right: 38rpx;
}
.goods-view {
  flex: 1;
  margin: 0rpx 28rpx 54rpx 18rpx;
  display: flex;
  flex-flow: row wrap;
}
.goods-context{
  width: 33%;
  height: 210rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  display: flex;
}
.goods-context image {
  width: 120rpx;
  height: 120rpx;
}
.goods-context text {
  font-size: 26rpx;
  color: #666666;
  margin: 10rpx auto;
  height: 26rpx;
}