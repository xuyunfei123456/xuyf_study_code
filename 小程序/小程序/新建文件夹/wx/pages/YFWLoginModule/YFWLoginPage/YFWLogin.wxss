/* pages/YFWLoginModule/YFWLoginPage/YFWLogin.wxss */

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
}

.top_view_img {
  display: flex;
  align-items: center;
  justify-content: center;
}

.top_img {
  width: 305px;
  height: 251px;
  margin-top: 170rpx;
}

.bottom_view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text-login {
  flex-direction: column;
  display: flex;
  text-align: left;
  font-size: 24rpx;
  color: #666;
  margin-left: 70rpx;
  margin-right: 70rpx;
  margin-top: 70rpx;
  line-height: 44rpx;
  font-family: SourceHanSansCN-Normal;
}

.btn-login {
  height: 82rpx;
  width: 90%;
  background-color: #1fdb9b;
  font-size: 32rpx;
  color: #fff;
  margin-top: 41rpx;
}

/*shop-car-loading*/
.shop-car-loading{
  position: absolute;
  display: flex;
  flex-direction: row;
  bottom: calc(50vh - 35rpx);
  left: calc(50vw - 35rpx);
  width: 70rpx; 
	height: 70rpx;
  z-index: 999;
	background-color: transparent;
}
