  padding-top: 42rpx;
  font-weight: bolder;
}
.close {
  width: 30rpx;
  height: 30rpx;
  top: 22rpx;
  right: 22rpx;
  position: absolute;
}

.jobline {
  height: 90rpx;
  margin-left: 40.666rpx;
  margin-right: 40.666rpx;
  padding-left: 20rpx;
  color: #666666;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
}
.listWrapper{
  height: 700rpx;
