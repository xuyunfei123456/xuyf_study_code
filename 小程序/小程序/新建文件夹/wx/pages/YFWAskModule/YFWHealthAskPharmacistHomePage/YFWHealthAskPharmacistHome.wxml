      <text class='newQTxt'>全部问题</text>
      <view class='clearBoth'></view>
    </view>

  </view>
  <!-- 热门问题列表 -->
  <block wx:for='{{ansList}}' wx:key='index' data-item='{{item}}'>
    <view class='replyQuey noBorder'>

      <view class='replyOne'>{{item.title}}</view>
      <view class='replyDel'>
        <text>回答：</text> {{item.reply_content}}
      </view>
      <view class='replyTwo replyFex'>
        <view class='replyTime timeRght'>{{item.create_time}}</view>
      </view>

    </view>
    <view class='borBotm'></view>
