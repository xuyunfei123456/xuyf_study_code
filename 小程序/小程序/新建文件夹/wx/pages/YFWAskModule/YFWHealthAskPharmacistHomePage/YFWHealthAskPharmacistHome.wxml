      <view class='iSkip' bindtap='openUtilityMenu'>
        <image class='moreView' src='/images/more_white.png' mode='aspectFit' id='more_image'></image>
      </view>
    </view>
  </view>
<view class='bg-whit clearfix title'>
  <image src='{{docImg}}' mode='widthFix' class='hedPort'></image>
  <view class='telRght'>
    <view class='isname clearfix'>
      <view class='docName aaqDel'>{{docID.name}}</view>
      <view class='docProfe aaqDel'>{{docID.type}}</view>
      <view class='hospital aaqDel' bindtap='onHospital' data-item='{{docID}}'>{{docID.practice_unit}}</view>
    </view>
    <view class='isQuion clearfix'>
