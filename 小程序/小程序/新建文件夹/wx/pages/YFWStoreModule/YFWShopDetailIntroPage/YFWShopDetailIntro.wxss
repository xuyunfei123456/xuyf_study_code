/* pages/YFWStoreModule/YFWShopDetailIntroPage/YFWShopDetailIntro.wxss */
.container{
  width: 100vw;
  height: 100vh;
  background-color: #fafafa
}
.containerView{
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  position: absolute;
  z-index: 10;
}
.shop_bg_img{
  z-index: 1;
  width: 100vw;
  height: 600rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.topView{
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
}
.topTitleView{
  height: 100rpx;
  width: 70vw;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 35rpx;
}
.topViewMore{
  display: flex;
  height: 100rpx;
  width: 15vw;
  margin-left: 10rpx;
  margin-right: 40rpx;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center
}
.more{
  width: 40rpx;
  height: 10rpx;
}

.borderView{
  display: flex;
  border-radius: 20rpx;
  box-shadow: 0px 0px 30rpx #cecece47;
  overflow: hidden;
  flex-direction: row;
  background-color: white;
  width: 92vw;
  margin-left: 4vw;
  margin-bottom: 20rpx;
  flex-wrap:wrap;
}
.shopInfoView{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100%;
  margin: 20rpx 0rpx;
}
.shopImage{
  width: 140rpx;
  height: 70rpx;
  margin-left: 20rpx;
}
.shopName{
  display: inline-flex;
  width: 350rpx;
  height: 70rpx;
  line-height: 35rpx;
  font-size: 30rpx;
  color: #333333;
  margin-left: 20rpx;
}
.borderlabelView{
  display:flex;
  border: solid #33DB9B 2rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  width: 130rpx;
  align-items: center;
  justify-content: center;
}
.borderlabelText{
  display:block;
  font-size:24rpx;
  color:#33DB9B;
  text-align:center;
  line-height:20rpx;
  margin:10rpx 25rpx 10rpx 25rpx;
  height:20rpx;
}
.address{
  display: block;
  line-height: 25rpx;
  color: #666666;
  font-size: 24rpx;
  margin-left:20rpx;
  margin-bottom:20rpx;
}

.rateItem{
  display: flex;
  height: 35rpx;
  width: 100%;
  margin: 0 40rpx;
  margin-top: 25rpx;
}
.rateItem:first-child{
  margin-top: 35rpx;
}
.rateItem:last-child{
  margin-bottom: 35rpx;
}
.rateText{
  display: block;
  height: 30rpx;
  line-height: 30rpx;
  color: #999999;
  font-size: 24rpx;
} 
.fixedwidth{
  width: 160rpx;
}
.rateTextDesc{
  margin-left: 20rpx;
  color: #666666;
}
.rateTextRadio{
  margin-left: 90rpx;
  color: #33DB9B;
}
.rateNum{
  display: block;
  height: 35rpx;
  line-height: 30rpx;
  color: #FF3300;
  font-size: 30rpx;
  margin-left: 50rpx;
}
.stars{
  margin-left: 50rpx;
}
.rateTitle{
  display: block;
  height: 30rpx;
  line-height: 30rpx;
  color: #333333;
  font-size: 30rpx;
  font-weight:700;
  margin: 30rpx 0rpx 30rpx 4vw;
}
.zz_imageView{
  float: right;
  margin-right: 4vw;
  margin-left: 0vw;
  margin-bottom: 20rpx;
  width: 45vw;
  height: auto;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0px 0px 30rpx #cecece47;
  overflow: hidden;
}
.zz_imageView:nth-of-type(odd){
  float: left;
  margin-left: 4vw;
  margin-right: 0vw;
}
.zz_imageView:last-child{
    margin-bottom: 0rpx;
}
.imageView{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.zz_image{
  display: block;
  width: 270rpx;
  height: 270rpx;
}
.zz_image_name{
  display: block;
  height: 20rpx;
  line-height: 20rpx;
  color: #333333;
  font-size: 24rpx;
  margin: 20rpx 0rpx 30rpx 0rpx;
}
.sj_imageView{
  margin-bottom: 20rpx;
  width: 90vw;
  margin-left: 4vw;
  height: auto;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0px 0px 30rpx #cecece47;
}
.sj_image{
  display: block;
  width: 100%;
  height: 340rpx;
}
.clearView{
  display: block;
  clear:both;
  padding-top: 1rpx;
  overflow: auto;
  background-color: #fafafa;
}